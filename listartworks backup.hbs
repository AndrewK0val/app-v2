{{#unless artCollection.artworks}}
  <h3 class="ui center aligned message">It's very quiet in here... start adding some artworks!</h3>
{{/unless}}

{{#if artCollection.artworks}}

  <table class="ui fixed striped table">
    <thead>
      <tr>
        <th class="four wide">Artwork</th>
        <th class="four wide">Artist</th>
        <th class="three wide">Medium</th>
        <th class="three wide">Date Published</th>
        <th class="one wide"> </th>
        <th class="one wide"> </th>
        <th class="one wide"></th>
      </tr>
    </thead>
  <tbody>
      {{#each artCollection.artworks}}
      <form class = "ui form" action="/artCollection/{{../artCollection.id}}/updateartwork/{{id}}" method="POST">
      <tr class="fields">
        <td class="field">
          <span class="ui input">
           <input placeholder="Title" type="text" size="30" name="title" autofocus required value = "{{capitalise title}}">
          </span>
        </td>
        <td class="field">
          <span class="ui input">
            <input placeholder="Artist" type="text" size="30" name="artist" required value = "{{capitalise artist}}">
          </span>
        </td>
        <td class="field">
         <span class="ui input">
          <select name="medium" id="medium" style="padding:.6em 2.5em; border:solid lightgray 1px;border-radius:5px;">
            <option value="{{medium}}" selected="selected">{{medium}}</option>
            {{{populate medium}}}       
			    </select>       
          </span>
        </td>
        <td class="field">
          <span class="ui input">
            <input placeholder="PublishDate" type="text" name="publishDate" required value = "{{publishDate}}">
          </span>
        </td>
        <td class="center aligned">
          <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
        </td>
        <td class="center aligned">
          <a href="/artCollection/{{../artCollection.id}}/deleteartwork/{{id}}" class="ui icon button delartwork">
            <i class="icon trash"></i>
          </a>
        </td>
          <td>
            <img class="ui small image" src="https://i.redd.it/m9no0tkm6nk91.jpg" alt="">
        </td>
      </tr>
     
      </form> 
      {{/each}}
    </tbody>
  </table>

  <p>
    <span id="rating"> </span>
  </p>

  <button class="ui blue button" onclick="getRating()">
    Rate it! <i class="star icon"></i>
  </button>

{{/if}}
